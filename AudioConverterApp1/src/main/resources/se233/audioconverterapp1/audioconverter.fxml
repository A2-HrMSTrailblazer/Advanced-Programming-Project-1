<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="se233.audioconverterapp1.controller.AudioConverterController">

    <!-- Top: Title + Toolbar -->
    <top>
        <VBox spacing="8" style="-fx-padding: 12 16 0 16;">

            <HBox alignment="CENTER_LEFT">
                <Label text="Audio Converter App"
                       styleClass="ui-title" />
            </HBox>

            <!-- Toolbar -->
            <ToolBar styleClass="topbar">
                <Label text="Output Format:"/>
                <ChoiceBox fx:id="formatChoiceBox" prefWidth="120"/>
                <Separator orientation="VERTICAL"/>
                <Button fx:id="convertButton" text="Convert" styleClass="btn btn-primary"/>
                <Button fx:id="cancelButton" text="Cancel" styleClass="btn btn-warning"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="clearButton" text="Clear List" styleClass="btn btn-danger"/>
            </ToolBar>
        </VBox>
    </top>

    <!-- Center: Drop Zone + Table -->
    <center>
        <VBox spacing="16" alignment="CENTER" style="-fx-padding: 20;">
            <!-- Drop Zone -->
            <StackPane fx:id="dropContainer"
                       pickOnBounds="true"
                       maxWidth="720" minHeight="140"
                       styleClass="dropzone">
                <Label fx:id="dropZone"
                       text="Drop your audio files here (double-click to browse)"
                       styleClass="dropzone-text"/>
            </StackPane>

            <!-- Table -->
            <TableView fx:id="fileTable" prefHeight="320" prefWidth="720">
                <columns>
                    <TableColumn fx:id="fileNameColumn" text="File Name" minWidth="280"/>
                    <TableColumn fx:id="formatColumn" text="Format" minWidth="100" maxWidth="150"/>
                    <TableColumn fx:id="sizeColumn" text="Size (KB)" minWidth="120" maxWidth="150"/>
                    <TableColumn fx:id="progressColumn" text="Progress" minWidth="160"/>
                    <TableColumn fx:id="statusColumn" text="Status" minWidth="140"/>
                </columns>
                <placeholder>
                    <Label text="No audio files" />
                </placeholder>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom: Tip + Global Progress -->
    <bottom>
        <VBox spacing="8" style="-fx-padding: 12 20 16 20;">
            <HBox alignment="CENTER_LEFT">
                <Label text="Supported formats: MP3, WAV, M4A, FLAC" styleClass="tip-text"/>
            </HBox>
            <ProgressBar fx:id="globalProgressBar" prefWidth="700"/>
        </VBox>
    </bottom>

</BorderPane>
